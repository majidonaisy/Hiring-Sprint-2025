# Server Configuration
NODE_ENV=development
PORT=3001

# CORS
CORS_ORIGIN=http://localhost:3000

# Database (Prisma with SQLite)
DATABASE_URL=file:./database/inspections.db

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# STORAGE PROVIDER SELECTION
# Options: local (default), supabase, cloudinary, s3, firebase
STORAGE_PROVIDER=local

# SUPABASE CONFIGURATION
# Get your credentials from: https://supabase.com/dashboard
# Free tier available with generous limits
SUPABASE_PROJECT_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_BUCKET_NAME=vehicle-inspection

# CLOUDINARY CONFIGURATION
# Get your credentials from: https://cloudinary.com/console
# Sign up for free at: https://cloudinary.com/users/register/free
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_UPLOAD_PRESET=unsigned_upload_preset

# AI PROVIDER SELECTION
# Options: mock (default), huggingface, roboflow, custom
AI_PROVIDER=mock

# HUGGINGFACE API CONFIGURATION
# Get your free API key from: https://huggingface.co/settings/tokens
# Model: Roboflow/car-damage-level-detection-yolov8
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ROBOFLOW API CONFIGURATION (if using Roboflow provider)
# Get your API key from: https://roboflow.com/settings/api
# ROBOFLOW_API_KEY=your_roboflow_api_key_here
# ROBOFLOW_MODEL_ID=your_model_id

# CUSTOM AI PROVIDER (if using custom endpoint)
# CUSTOM_AI_ENDPOINT=https://your-ml-server.com/api/predict
# CUSTOM_AI_API_KEY=your_custom_api_key_here
